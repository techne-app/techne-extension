{
  "manifest_version": 3,
  "name": "DOM Modifier",
  "version": "1.0",
  "description": "An extension that modifies the DOM of the current page.",
  "permissions": ["activeTab"],
  "icons": {
    "48": "images/icon-48.png"
  },
  "content_scripts": [
    {
        "matches": ["https://news.ycombinator.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon-48.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "background.js"
  }
}
